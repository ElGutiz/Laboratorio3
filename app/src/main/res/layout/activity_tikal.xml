<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.laboratorio3.Model"
            />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tikal">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="490dp"
        android:layout_height="207dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tikal1" />

    <ScrollView
        android:id="@+id/main_information"
        android:layout_width="293dp"
        android:layout_height="312dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="3dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:justificationMode="inter_word"
                android:text="@={model.description}"
                android:textSize="@dimen/text_size"></TextView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/sub_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="676dp"
        android:fontFamily="@font/roboto_light"
        android:text="Comment:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/final_comment"
        android:layout_width="338dp"
        android:layout_height="87dp"
        android:layout_marginTop="572dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:inputType="textPersonName"
        android:text="Comment:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phrase1"
        android:layout_width="92dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        android:fontFamily="@font/roboto_medium"
        android:justificationMode="inter_word"
        android:paddingTop="15dp"
        android:text="@={model.phrase}"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="302dp"
        android:layout_height="23dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@={model.title}"
        android:textAlignment="center"
        android:textSize="@dimen/title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>